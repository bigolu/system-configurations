// The goal of this config is to be able to update everything at once. Then I will
// manually run the Renovate bot when I want to update. I'm doing this because I have
// no automated tests.
{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "local>bigolu/system-configurations//renovate/common-preset.json5",
    "group:all",
  ],
  // Automerge even if no tests are run
  ignoreTests: true,
  packageRules: [
    // Automerge everything
    {
      matchPackageNames: ["*"],

      automerge: true,
      // I'm using the branch type, instead of the pull request type, for auto merge
      // so I don't get notifications for them.
      automergeType: "branch",
    },

    {
      matchManagers: ["nix"],
      matchDepNames: ["nixpkgs"],
      postUpgradeTasks: {
        commands: [
          "nix-shell direnv/direnv-wrapper.bash direnv/ci.bash exec . ./lefthook/scripts/code-generation/add-nix-version-to-readme.bash",
          "nix-shell direnv/direnv-wrapper.bash direnv/ci.bash exec . ./lefthook/scripts/code-generation/add-nixpkgs-commit-to-readme.bash",
          "nix-shell direnv/direnv-wrapper.bash direnv/ci.bash exec . ./lefthook/scripts/code-generation/mergiraf.bash",
        ],
      },
    },
  ],
}
