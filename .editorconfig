# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{justfile,*.{fish,py}}]
indent_size = 4

[{go.mod,go.sum,*.go}]
indent_style = tab

[*.md]
indent_size = unset

# These files were generated or copied so need to enforce a certain style
[{*.{plist,keylayout},COPYING.txt}]
insert_final_newline = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
