# Setting a root lets EditorConfig know that this is the top-most config
# file. Otherwise, it would continue to search more parent directories.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{fish,py}]
indent_size = 4

[{go.{mod,sum},*.go}]
indent_style = tab

[*.md]
indent_size = unset

[*.{sh,bash}]
# These are read by `shfmt`
simplify = true
switch_case_indent = true

# These files were generated or copied so there's no need to validate anything. Below
# are the settings that editorconfig-checker would validate.
[{*.{plist,keylayout},COPYING.txt}]
charset = unset
end_of_line = unset
insert_final_newline = unset
