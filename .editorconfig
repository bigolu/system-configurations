# Setting a root lets EditorConfig know that this is the top-most config
# file. Otherwise, it would continue to search more parent directories.
root = true

# We don't set `end_of_line` so editors on Windows can use Windows' native line
# ending, CRLF.
[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{fish,py}]
indent_size = 4

[{go.{mod,sum},*.go}]
indent_style = tab

[*.md]
indent_size = unset

[*.{sh,bash}]
# These are read by `shfmt`
simplify = true
switch_case_indent = true
