{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  prCreation: "not-pending",
  nix: {
    enabled: true,
  },
  gomod: {
    pinDigests: true,
  },
  postUpdateOptions: ["gomodTidy", "gomodMassage"],
  extends: [
    "config:best-practices",
    "schedule:weekends",
    "schedule:automergeWeekends",
  ],
  separateMajorMinor: true,
  separateMultipleMajor: true,
  lockFileMaintenance: {
    enabled: true,
    schedule: ["every weekend"],
  },
  packageRules: [
    {
      matchUpdateTypes: [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
      ],

      // Don't auto-merge if the major version is 0, in which case a minor/patch
      // update _can_ be a breaking change.
      matchCurrentVersion: "!/^0/",

      automerge: true,
      automergeType: "branch",

      // Normally, CI checks (e.g. tests, linting) only run on pull requests,
      // but since these branches won't be merged through a pull request, I
      // want to run checks whenever the branch is pushed to. To identify these
      // branches, I'm adding a prefix to the branch name.
      //
      // SYNC: AUTOMERGE_PREFIX
      additionalBranchPrefix: "branch-automerge/",
    },
    {
      matchManagers: ["gomod"],
      automergeType: "pr",

      // So I can add commits of my own
      // SYNC: RENOVATE_FIXUP_GOLANG RENOVATE_FIXUP
      additionalBranchPrefix: "fixup/golang/",

      // SYNC: RENOVATE_FIXUP
      commitMessageAction: "[RENOVATE_FIXUP] Update",
    },
    {
      matchDepNames: ["nix-community/nix-direnv"],
      automergeType: "pr",

      // So I can add commits of my own
      // SYNC: RENOVATE_FIXUP_ENVRC RENOVATE_FIXUP
      additionalBranchPrefix: "fixup/envrc/",

      // SYNC: RENOVATE_FIXUP
      commitMessageAction: "[RENOVATE_FIXUP] Update",
    },

    // By default, indirect Go dependencies aren't updated
    {
      matchManagers: ["gomod"],
      matchDepTypes: ["indirect"],
      enabled: true,
    },
  ],
  osvVulnerabilityAlerts: true,
  vulnerabilityAlerts: {
    labels: ["security"],

    // Don't automerge, it may be wrong:
    // https://docs.renovatebot.com/configuration-options/#vulnerabilityalerts
    automerge: false,
  },
  customManagers: [
    {
      customType: "regex",
      datasourceTemplate: "github-releases",
      depNameTemplate: "nix-community/nix-direnv",
      fileMatch: ["(^|/).envrc$"],
      matchStrings: [
        "['\"]https:\\/\\/raw\\.githubusercontent\\.com\\/nix-community\\/nix-direnv\\/(?<currentValue>.+)\\/direnvrc['\"]",
      ],
    },
  ],
}
