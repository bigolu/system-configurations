  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash Script",
      "program": "${file}",
      "argsString": "${input:args}"
    }
  ],
  "inputs": [
    {
      "id": "args",
      "type": "promptString",
      "description": "arguments to pass to the script",
      "default": ""
    }
  ]
}
