    // Applies the direnv environment to VS Code
    "mkhl.direnv",

    // language server for TOML
    "tamasfe.even-better-toml",

    // language server for YAML
    "redhat.vscode-yaml",

    // language server for Bash
    "mads-hartmann.bash-ide-vscode",

    // Language server for prose in markup languages e.g. markdown. I'd use
