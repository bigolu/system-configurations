    "valentjn.vscode-ltex",

    // Syntax highlighting, linting, and autocomplete for fish
    "bmalehorn.vscode-fish",

    // Language server for Lua
    "sumneko.lua",

    // Language client and Syntax highlighting for Nix
    "jnoortheen.nix-ide",

    // Syntax highlighting for Just
    "nefrob.vscode-just-syntax"
