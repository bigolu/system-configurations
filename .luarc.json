{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "unusedLocalExclude": ["_*"],
    "libraryFiles": "Disable"
  },
  "workspace": {
    "library": ["$LUA_LIBRARY_NIX", "$LUA_LIBRARY_HAMMERSPOON"],
    "checkThirdParty": "Disable"
  },
  "runtime": {
    "version": "LuaJIT"
  },
  "telemetry": {
    "enable": false
  },
  "hint": {
    "enable": true
  }
}
